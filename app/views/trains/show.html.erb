<p id="notice"><%= notice %></p>
<p>
  <strong>Number:</strong>
  <%= @train.number %>
</p>
<p>
  <strong>Route</strong>
  <% if @train.current_station.present? %>
    <%= @train.current_station.name%>
  <% else %>
    No route
  <% end %>
</p>
<p>
  <strong>Carriages:</strong>
  <% if @train.carriages.present? %>
    <p> <strong>Econom carriages:</strong> <%= @train.carriages.economs.count %> </p>
    <p> Top seats: <%= @train.econom_seats :top_seats %> </p>
    <p> Bottom seats: <%= @train.econom_seats :bottom_seats %> </p>         
    <p> <strong>Coupe carriages:</strong> <%= @train.carriages.coupes.count %> </p>
    <p> Top seats: <%= @train.coupe_seats :top_seats %> </p>   
    <p> Bottom seats: <%= @train.coupe_seats :bottom_seats %> </p>    
  <% else %>
    No carriages
  <% end %>
</p>

<ul> Carriages list
  <% @train.carriages.order_by_tail(@train.tail).each do |car| %>
  <li> <%= link_to car.number, car %> </li>
  <% end %>
</ul>
<%= link_to 'Edit', edit_train_path(@train) %> |
<%= link_to 'Back', trains_path %>
