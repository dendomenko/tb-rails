<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Trains</strong>
  <% if @route.trains.present? %>
    <ul>
      <% @route.trains.each do |train|%>
        <li><%= link_to train.number, train %></li>
      <% end %>
    </ul>
  <% else %>
    No trains
  <% end %>
</p>

<p>
  <strong>Stations</strong>
  <% if @route.stations.present? %>
    <table>
      <thead>
      <tr>
        <td width="100px">Name</td>
        <td>Number</td>
      </tr>
      </thead>
      <tbody>
      <% @route.stations.order_by_number.each do |station| %>
          <tr>
            <td><%= station.name %></td>
            <td>
              <%= form_tag update_position_station_path(station), method: :patch do %>
                <%= number_field_tag :position, station.position_in(@route) %>
                <%= hidden_field_tag :route_id, @route.id %>
                <%= submit_tag "Change" %>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    No stations
  <% end %>
</p>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
