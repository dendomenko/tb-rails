<%= form_for [:admin, @route] do |form| %>
<%= render 'common/errors', resource: @route %>


  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :station_ids %>
    <%= form.collection_select :station_ids, Station.all, :id, :name, { include_hidden: false }, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: @route.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
