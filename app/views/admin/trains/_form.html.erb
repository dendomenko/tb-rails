<%= form_for [:admin, @train] do |form| %>
<%= render 'common/errors', resource: @train %>
  <div class="form-group">
    <%= form.label :number %>
    <%= form.text_field :number, class: 'form-control' %>
  </div>
  <div class="form-check">
    <%= form.check_box :tail, class: 'form-check-input' %>
    <%= form.label :tail, class: 'form-check-label' %>
  </div>
  <div class="form-group">
    <%= form.label :route_id %>
    <%= form.collection_select :route_id, Route.all, :id, :name, {}, {class: 'form-control'} %>
  </div>

  <div class="actions">
    <%= form.submit t('.submit', action: @train.new_record? ? 'Создать' : 'Изменить') %>
  </div>
<% end %>
